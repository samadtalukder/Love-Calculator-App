<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#D82A2A" />
            <gradient android:angle="-90" android:endColor="#B64646" android:startColor="#D82A2A" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#D82A2A" />
            <solid android:color="#B64646" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#D82A2A" />
            <gradient android:angle="-90" android:endColor="#D82A2A" android:startColor="#B64646" />
        </shape>
    </item>
</selector>